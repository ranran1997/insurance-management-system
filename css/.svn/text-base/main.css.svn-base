html { overflow: auto; font-size: 62.5%; }
html, body { height: 100%; }
table {border-collapse: collapse; border-spacing: 0; table-layout:fixed;}
* { -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; }
body,input,textarea,select{font-family: Helvetica Neue,Tahoma,Arial,"Microsoft Yahei","宋体","黑体";margin:0;}
.app-container{position:relative;height:100%;overflow:hidden;}
.app-asider{width:100px;height:100%;float:left;background:#2E5CA9;box-shadow:0 1px 4px 0 rgba(0,0,0,.2),0 3px 12px 0 rgba(0,0,0,.2);position:relative;z-index:11;}
.app-view{position:absolute;left:100px;right:0;height:100%;z-index:8;}
.app-face{height:80px;vertical-align: middle;width:100%;text-align: center;}
.app-face i{display:inline-block;width:0;height:100%;vertical-align: middle;}
.app-face img{vertical-align: middle;width:64px;height:64px;border-radius:50%;display:inline-block;margin-left:-8px;}
.app-menu,.app-sub-menu{margin:0;padding:0;}
.app-menu li{position:relative;list-style: none;padding:10px;}
.app-menu li a{display:block;text-align:center;text-decoration: none;font-size:12px;color:#fff;}
.app-menu li a i{display:block;width:100%;font-size:24px;margin-bottom:10px;}
.app-sub-menu{display:none;position:absolute;top:0;z-index:10;background:#fff;left:100px;min-width:140px;padding:15px 0;border-radius:0 5px 5px 0;box-shadow:0 1px 4px 0 rgba(0,0,0,.2),0 3px 12px 0 rgba(0,0,0,.2);}
.app-sub-menu li{padding:10px;}
.app-sub-menu li a{color:#123676;font-size:14px;}
.app-menu .active,.app-menu li:hover{background:#123676;}
.app-menu li:hover .app-sub-menu{display:block;}
.app-sub-menu li:hover{box-shadow:0 0px 2px 0 rgba(0,0,0,.2),0 0px 4px 0 rgba(0,0,0,.2);background:#F7F7F7;color:#E88948;margin:0 5px;border-radius:3px;}
.app-menu-bottom{position:absolute;bottom:0;width:100px;height:50px;left:0;}
.app-menu-bottom a{display:block;width:50%;height:100%;text-align:center;line-height:50px;float:left;color:#fff;font-size:20px;text-decoration:none;}
.app-menu-bottom a:hover{background:#123676;}

.app-main-title{height:40px;position:relative;background:#FAFAFA;border-bottom:1px solid #EAEAEA;}
.app-main-title .app-button-mini{position:absolute;right:10px;top:50%;margin-top:-12px;}
.app-main-content{padding:10px;}
.app-table-form{width:100%;margin:2% auto 20px auto;}
.app-table-form th{font-size:14px;color:#484848;font-weight:normal;padding-right:1em;height:50px;text-align:right;width:10%;}
.app-table-form td{padding-right:10%;}
.app-form-btn{margin-top:30px;}
.app-form-btn .app-button-conner{margin-right:10px;}
.app-main-title h1{margin:0;font-weight:normal;font-size:14px;height:40px;line-height:40px;padding:0 1em;}
.app-main-title h1 a{color:#376FA8;text-decoration: none;margin-right:10px;}
.app-main-title h1 i{font-size:24px;vertical-align: middle;color:#376FA8;margin-right:10px;}
.app-main-title h1 span{margin-left:10px;color:#666;}

.app-table-list{width:100%;font-size:14px;margin:20px auto;border-top:1px solid #376FA8;}
.app-table-list th{font-weight:normal;height:45px;text-align:center;color:#376FA8;background:#F3F3F3;border-bottom:1px solid #376FA8;}
.app-table-list td{padding:0 1em;height:45px;color:#666;border-bottom:1px solid #D9D9D9;}

.app-search-form{width:100%;margin:0 auto;background:#FCFCFC;padding:10px 5px;}
/*button*/
.app-button, .app-button-primary, .app-button-light, .app-button-block,.app-button-red { display: inline-block; zoom: 1; *display: inline; height: 32px; line-height: 32px; padding: 0 25px; outline: none; border: none; text-decoration: none;}
.app-button.app-button-mini, .app-button-primary.app-button-mini, .app-button-light.app-button-mini, .app-button-block.app-button-mini,.app-button-red.app-button-mini{height:24px;line-height:24px;padding:0 1em;}
.app-button:hover, .app-button-primary:hover, .app-button-light:hover, .app-button-block:hover,.app-button-red:hover { opacity: 0.9; filter: alpha(opacity=90); }
.app-button:active, .app-button-primary:active, .app-button-light:active, .app-button-block:active,.app-button-red:active { opacity: 1; filter: alpha(opacity=100); }
.app-button-primary { background: #5A93C9; color: #fff; }
.app-button-light { background: #fff; border: 1px solid #CCCCCC; color: #474747; background-color: #F7F7F7; }
.app-button-red{background:#D84C29;color:#fff;}
.app-button-conner { border-radius: 5px; }
.app-button-round { border-radius: 16px; }
.app-button-block { display: block; width: 100%; text-align: center; }
.app-button-conner i{margin-right:5px;font-size:14px;}
/*form*/
/*select*/
.app-select{height:32px;padding:0 15px;border-radius:5px;position:relative;margin-right:10px;border:1px solid #CCCCCC;}
.app-select:focus{outline: none;}
/*input*/
.app-input, .app-input-block, .app-input-conner, .app-input-round { height: 32px; line-height: 32px; border: 1px solid #ccc; padding: 0 1rem;resize: none;}
.app-input:focus, .app-input-block:focus, .app-input-conner:focus, .app-input-round:focus { border-color: #5D95CB; box-shadow: 0 1px 4px 0 #f2faf2, 0 3px 12px 0 #f2faf2; }
.app-input-block { width: 100%; }
.app-input-conner { border-radius: 4px; }
.app-input-round { border-radius: 16px; }
.app-textarea{height:auto;min-height:90px;}
/*radio*/
.app-radio { padding-left: 22px; position: relative; min-height: 22px; display: inline-block; zoom: 1; *display: inline;margin-right:10px;}
.app-radio span { position: absolute; left: 0; top: 0; display: inline-block;display:none\9; width: 22px; height: 22px; border-radius: 11px; border: 1px solid #ccc; z-index: 1; }
.app-radio label { display: inline-block; zoom: 1; *display: inline; height: 22px; line-height: 22px;padding-left:0.5em;font-size:14px;}
.app-radio input { position: absolute; left: 2px; top: 2px; width: 22px; hegiht: 22px; z-index: 2; transform: scale(2); opacity: 0; }
.app-radio input[type="radio"]:checked + span{border-color:#5D95CB;}
.app-radio input[type="radio"]:checked + span:before { content: "•"; font-size: 22px; color: #5D95CB; position: absolute; width: 22px; height: 22px; text-align: center; line-height: 22px; margin-top: -2px; margin-left: -2px; }
/*checkbox*/
.app-checkbox { padding-left: 22px; position: relative; min-height: 22px; display: inline-block; zoom: 1; *display: inline;margin-right:10px;}
.app-checkbox span { position: absolute; left: 0; top: 0; display: inline-block;display:none\9; width: 22px; height: 22px; border-radius: 4.4px; border: 1px solid #ccc; z-index: 1; transition: 200ms ease-in all; }
.app-checkbox label { display: inline-block; zoom: 1; *display: inline; height: 22px; line-height: 22px; padding-left:0.5em;font-size:14px;}
.app-checkbox input { position: absolute; left: 2px; top: 2px; width: 22px; hegiht: 22px; z-index: 2; transform: scale(2); opacity: 0; }
.app-checkbox input[type="checkbox"]:checked + span{border-color:#5D95CB;}
.app-checkbox input[type="checkbox"]:checked + span:before { content: "\2714"; font-size: 14px; color: #5D95CB; position: absolute; width: 22px; height: 22px; text-align: center; line-height: 22px; margin-top: -2px; margin-left: -2px; }
/*file*/
.app-file{display:inline-block;height:32px;position:relative;width:80px;overflow:hidden;}
.app-file input{font-size:300px;position:absolute;top:0;left:0;opacity:0;filter:alpha(opacity=0);}
.app-file span{display:block;width:100%;height:32px;line-height:32px;font-size:14px;color:#5A93C9;}
.app-file span i{font-size:24px;vertical-align: middle;margin-right:5px;}
@media screen and (min-width: 0px) {
	 .LC_checkbox span{display:block;background:none;}
	 .LC_checkbox span:after{font-size:14px;}
	 .LC_checkbox.LC_checked span{background-image:none;}
	 .LC_radio span{display:block;background:none;}
	 .LC_radio span:after{font-size:14px;}
	 .LC_radio.LC_checked span{background-image:none;}
}